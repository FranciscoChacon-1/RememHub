<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".tareas_pendientes_inicio">

    <TextView
        android:id="@+id/textViewEstaSemana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta semana"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEstaSemana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSiguienteSemana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente semana"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSiguienteSemana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MenÃº"
        android:layout_marginTop="16dp"
        android:onClick="Dirigir"
        tools:ignore="MissingConstraints" />
</LinearLayout>