<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <!-- Sonido Option -->
    <TextView
        android:id="@+id/tv_sonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sonido"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Notificación Extraordinaria Option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notificacion_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notificaci_n_extraordinaria"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- Subtitle showing selected option -->
        <TextView
            android:id="@+id/tv_selected_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/_5_minutos_antes_default"
            android:textColor="#888888"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <!-- Submenu options for notification timing -->
    <Spinner
        android:id="@+id/spinner_notificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Vibración Option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_vibracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vibraci_n"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_vibracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>
